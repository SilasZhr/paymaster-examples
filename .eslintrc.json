{
  "parserOptions": {
    "ecmaVersion": 2022,
    "ecmaFeatures": {
      "jsx": true
    },
    "sourceType": "module"
  },

  "env": {
    "es2021": true,
    "node": true
  },

  "plugins": ["import", "n", "promise"],

  "globals": {
    "document": "readonly",
    "navigator": "readonly",
    "window": "readonly"
  },

  "rules": {
    "no-var": "off",
    "object-shorthand": ["off", "properties"],

    "accessor-pairs": [
      "off",
      { "setWithoutGet": true, "enforceForClassMembers": true }
    ],
    "array-bracket-spacing": ["off", "never"],
    "array-callback-return": [
      "off",
      {
        "allowImplicit": false,
        "checkForEach": false
      }
    ],
    "arrow-spacing": ["off", { "before": true, "after": true }],
    "block-spacing": ["off", "always"],
    "brace-style": ["off", "1tbs", { "allowSingleLine": true }],
    "camelcase": [
      "off",
      {
        "allow": ["^UNSAFE_"],
        "properties": "never",
        "ignoreGlobals": true
      }
    ],
    "comma-dangle": [
      "off",
      {
        "arrays": "never",
        "objects": "never",
        "imports": "never",
        "exports": "never",
        "functions": "never"
      }
    ],
    "comma-spacing": ["off", { "before": false, "after": true }],
    "comma-style": ["off", "last"],
    "computed-property-spacing": [
      "off",
      "never",
      { "enforceForClassMembers": true }
    ],
    "constructor-super": "off",
    "curly": ["off", "multi-line"],
    "default-case-last": "off",
    "dot-location": ["off", "property"],
    "dot-notation": ["off", { "allowKeywords": true }],
    "eol-last": "off",
    "eqeqeq": ["off", "always", { "null": "ignore" }],
    "func-call-spacing": ["off", "never"],
    "generator-star-spacing": ["off", { "before": true, "after": true }],
    "indent": [
      "off",
      2,
      {
        "SwitchCase": 1,
        "VariableDeclarator": 1,
        "outerIIFEBody": 1,
        "MemberExpression": 1,
        "FunctionDeclaration": { "parameters": 1, "body": 1 },
        "FunctionExpression": { "parameters": 1, "body": 1 },
        "CallExpression": { "arguments": 1 },
        "ArrayExpression": 1,
        "ObjectExpression": 1,
        "ImportDeclaration": 1,
        "flatTernaryExpressions": false,
        "ignoreComments": false,
        "ignoredNodes": [
          "TemplateLiteral *",
          "JSXElement",
          "JSXElement > *",
          "JSXAttribute",
          "JSXIdentifier",
          "JSXNamespacedName",
          "JSXMemberExpression",
          "JSXSpreadAttribute",
          "JSXExpressionContainer",
          "JSXOpeningElement",
          "JSXClosingElement",
          "JSXFragment",
          "JSXOpeningFragment",
          "JSXClosingFragment",
          "JSXText",
          "JSXEmptyExpression",
          "JSXSpreadChild"
        ],
        "offsetTernaryExpressions": true
      }
    ],
    "key-spacing": ["off", { "beforeColon": false, "afterColon": true }],
    "keyword-spacing": ["off", { "before": true, "after": true }],
    "lines-between-class-members": [
      "off",
      "always",
      { "exceptAfterSingleLine": true }
    ],
    "multiline-ternary": ["off", "always-multiline"],
    "new-cap": [
      "off",
      { "newIsCap": true, "capIsNew": false, "properties": true }
    ],
    "new-parens": "off",
    "no-array-constructor": "off",
    "no-async-promise-executor": "off",
    "no-caller": "off",
    "no-case-declarations": "off",
    "no-class-assign": "off",
    "no-compare-neg-zero": "off",
    "no-cond-assign": "off",
    "no-const-assign": "off",
    "no-constant-condition": ["off", { "checkLoops": false }],
    "no-control-regex": "off",
    "no-debugger": "off",
    "no-delete-var": "off",
    "no-dupe-args": "off",
    "no-dupe-class-members": "off",
    "no-dupe-keys": "off",
    "no-duplicate-case": "off",
    "no-useless-backreference": "off",
    "no-empty": ["off", { "allowEmptyCatch": true }],
    "no-empty-character-class": "off",
    "no-empty-pattern": "off",
    "no-eval": "off",
    "no-ex-assign": "off",
    "no-extend-native": "off",
    "no-extra-bind": "off",
    "no-extra-boolean-cast": "off",
    "no-extra-parens": ["off", "functions"],
    "no-fallthrough": "off",
    "no-floating-decimal": "off",
    "no-func-assign": "off",
    "no-global-assign": "off",
    "no-implied-eval": "off",
    "no-import-assign": "off",
    "no-invalid-regexp": "off",
    "no-irregular-whitespace": "off",
    "no-iterator": "off",
    "no-labels": ["off", { "allowLoop": false, "allowSwitch": false }],
    "no-lone-blocks": "off",
    "no-loss-of-precision": "off",
    "no-misleading-character-class": "off",
    "no-prototype-builtins": "off",
    "no-useless-catch": "off",
    "no-mixed-operators": [
      "off",
      {
        "groups": [
          ["==", "!=", "===", "!==", ">", ">=", "<", "<="],
          ["&&", "||"],
          ["in", "instanceof"]
        ],
        "allowSamePrecedence": true
      }
    ],
    "no-mixed-spaces-and-tabs": "off",
    "no-multi-spaces": "off",
    "no-multi-str": "off",
    "no-multiple-empty-lines": ["off", { "max": 1, "maxBOF": 0, "maxEOF": 0 }],
    "no-new": "off",
    "no-new-func": "off",
    "no-new-object": "off",
    "no-new-symbol": "off",
    "no-new-wrappers": "off",
    "no-obj-calls": "off",
    "no-octal": "off",
    "no-octal-escape": "off",
    "no-proto": "off",
    "no-redeclare": ["off", { "builtinGlobals": false }],
    "no-regex-spaces": "off",
    "no-return-assign": ["off", "except-parens"],
    "no-self-assign": ["off", { "props": true }],
    "no-self-compare": "off",
    "no-sequences": "off",
    "no-shadow-restricted-names": "off",
    "no-sparse-arrays": "off",
    "no-tabs": "off",
    "no-template-curly-in-string": "off",
    "no-this-before-super": "off",
    "no-throw-literal": "off",
    "no-trailing-spaces": "off",
    "no-undef": "off",
    "no-undef-init": "off",
    "no-unexpected-multiline": "off",
    "no-unmodified-loop-condition": "off",
    "no-unneeded-ternary": ["off", { "defaultAssignment": false }],
    "no-unreachable": "off",
    "no-unreachable-loop": "off",
    "no-unsafe-finally": "off",
    "no-unsafe-negation": "off",
    "no-unused-expressions": [
      "off",
      {
        "allowShortCircuit": true,
        "allowTernary": true,
        "allowTaggedTemplates": true
      }
    ],
    "no-unused-vars": [
      "off",
      {
        "args": "none",
        "caughtErrors": "none",
        "ignoreRestSiblings": true,
        "vars": "all"
      }
    ],
    "no-use-before-define": [
      "off",
      { "functions": false, "classes": false, "variables": false }
    ],
    "no-useless-call": "off",
    "no-useless-computed-key": "off",
    "no-useless-constructor": "off",
    "no-useless-escape": "off",
    "no-useless-rename": "off",
    "no-useless-return": "off",
    "no-void": "off",
    "no-whitespace-before-property": "off",
    "no-with": "off",
    "object-curly-newline": ["off", { "multiline": true, "consistent": true }],
    "object-curly-spacing": ["off", "always"],
    "object-property-newline": [
      "off",
      { "allowMultiplePropertiesPerLine": true }
    ],
    "one-var": ["off", { "initialized": "never" }],
    "operator-linebreak": [
      "off",
      "after",
      { "overrides": { "?": "before", ":": "before", "|>": "before" } }
    ],
    "padded-blocks": [
      "off",
      { "blocks": "never", "switches": "never", "classes": "never" }
    ],
    "prefer-const": ["off", { "destructuring": "all" }],
    "prefer-promise-reject-offs": "off",
    "prefer-regex-literals": ["off", { "disallowRedundantWrapping": true }],
    "quote-props": ["off", "as-needed"],
    "quotes": [
      "off",
      "single",
      { "avoidEscape": true, "allowTemplateLiterals": false }
    ],
    "rest-spread-spacing": ["off", "never"],
    "semi": ["off", "never"],
    "semi-spacing": ["off", { "before": false, "after": true }],
    "space-before-blocks": ["off", "always"],
    "space-before-function-paren": ["off", "always"],
    "space-in-parens": ["off", "never"],
    "space-infix-ops": "off",
    "space-unary-ops": ["off", { "words": true, "nonwords": false }],
    "spaced-comment": [
      "off",
      "always",
      {
        "line": { "markers": ["*package", "!", "/", ",", "="] },
        "block": {
          "balanced": true,
          "markers": ["*package", "!", ",", ":", "::", "flow-include"],
          "exceptions": ["*"]
        }
      }
    ],
    "symbol-description": "off",
    "template-curly-spacing": ["off", "never"],
    "template-tag-spacing": ["off", "never"],
    "unicode-bom": ["off", "never"],
    "use-isnan": [
      "off",
      {
        "enforceForSwitchCase": true,
        "enforceForIndexOf": true
      }
    ],
    "valid-typeof": ["off", { "requireStringLiterals": true }],
    "wrap-iife": ["off", "any", { "functionPrototypeMethods": true }],
    "yield-star-spacing": ["off", "both"],
    "yoda": ["off", "never"],

    "import/export": "off",
    "import/first": "off",
    "import/no-absolute-path": [
      "off",
      { "esmodule": true, "commonjs": true, "amd": false }
    ],
    "import/no-duplicates": "off",
    "import/no-named-default": "off",
    "import/no-webpack-loader-syntax": "off",

    "n/handle-callback-err": ["off", "^(err|off)$"],
    "n/no-callback-literal": "off",
    "n/no-deprecated-api": "off",
    "n/no-exports-assign": "off",
    "n/no-new-require": "off",
    "n/no-path-concat": "off",
    "n/process-exit-as-throw": "off",

    "promise/param-names": "off"
  }
}
